<MainLayout>:
	orientation: 'vertical' 
	cell_grid: cell_grid
	CellGrid:
		id: cell_grid
		size_hint_x: None
		width: self.height
	BoxLayout:
		size_hint_y: .1
		orientation: 'horizontal'
		Button:
			text: 'Solve'
			on_press: root.cell_grid.on_solve_click()
		Button: 
			text: 'Reset'
			on_press: root.cell_grid.on_reset_click()

<CellGrid>:
	rows: 9
	cols: 9 

<CellBoxText>:
	font_size: self.height * .60
	halign: 'center'
	input_filter: 'int'
	multiline: False
	write_tab: False
